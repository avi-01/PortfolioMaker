    <body class="flexBox">

        <div class="logo-container" >
            <img class="logo" src="/resources/image/logo.png">
        </div>

        <div class="form flexBox">
            <div class="pic-part flexBox"> <img class= "picForm" src="/resources/image/icon/picForm.png"> </div>


            <div class="form-part flexBox"  id="login-form"> 
                <div class="form-head"> Login </div>
                <div class="error-message" id="login-error">.</div>
                <form class="input-part">
                    <div class="input-container">
                        <input type="email" id="login-email" placeholder="Email"> 
                    </div>
                    <div class="input-container">
                        <input type="password" id="login-password" placeholder="Password"> 
                    </div>
                    <button class="transback submit-button" id="login-button">Login</button>

                    {{!-- <button class="transback" id="forgot-button">Forgot <b>Password?</b></button> --}}
                    
                </form>

                <button class="transback flexBox change-form" id="goto-signup">Create Account &nbsp;<i class="fas fa-long-arrow-alt-right"></i></button>
            </div>


            <div class="form-part flexBox" id="signup-form"> 
                <div class="form-head"> Sign Up </div>
                <div class="error-message" id="signup-error">.</div>
                <form class="input-part">

                    <div class="input-container">
                        <input type="text" id="signup-name" placeholder="Name"> 
                    </div>
                    
                    <div class="input-container">
                        <input type="text" id="signup-username" placeholder="Username"> 
                    </div>

                    <div class="input-container">
                        <input type="email" id="signup-email" placeholder="Email"> 
                    </div>

                    <div class="input-container">
                        <input type="password" id="signup-password" placeholder="Password"> 
                    </div>
                    
                    <button class="transback submit-button" id="signup-button" onclick="">Signup</button>

                    
                </form>

                <button class="transback flexBox change-form" id="goto-login">Login &nbsp;<i class="fas fa-long-arrow-alt-right"></i></button>
            </div>
            
        </div>
        
        
        <script type="module" src="/Js/user/login.js"></script>
    </body>
